<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="ot_approve_draft_page" name="OT Draft Page">
        <t t-call="gmot_master.master_layouts">
            <t t-set="head">
                <div class="container-fluid" ng-app="app" ng-controller="ctrl" ng-cloak="">
                    <h2 class="mt-4">OT Approve Draft</h2>
                    <input type="hidden" id="emp_id" t-att-value="employee.id"/>
                    <h5 class="mb-4">Name: [<span t-esc="employee.code"></span>]
                        <span t-esc="employee.name"></span>
                    </h5>
                    <div class="card border-0 shadow-sm mb-5">
                        <div class="card-header bg-transparent">
                            <div cg-busy="{promise:myPromise,message:'Loading'}"></div>
                            <a href="/gmot/ot/approve/" class="btn btn-secondary">
                                <i class="fa fa-chevron-left"></i>
                                Back
                            </a>
                            <a href="#" class="btn btn-primary" ng-click="doApproveOT()">Approve</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Date</th>
                                        <th>OT</th>
                                        <th>Working Hours</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="p in ot_open_list">
                                        <td>@{$index + 1}</td>
                                        <td>@{p.ot_date}</td>
                                        <td>@{p.ot_rate}</td>
                                        <td>@{p.hours}</td>
                                        <td>@{p.amount|number:decimal_digits}</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="2">Total</th>
                                        <th>@{ot_total_rate}</th>
                                        <th>@{ot_total_hours}</th>
                                        <th>@{ot_total_amount|number:decimal_digits}</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
            <t t-set="script">
                <script src="/gmot_master/static/src/js/ot_approve_draft.js"></script>
            </t>
        </t>
    </template>
</odoo>
