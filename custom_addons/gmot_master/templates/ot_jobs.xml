<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="ot_jobs_page" name="OT Jobs Page">
        <t t-call="gmot_master.master_layouts">
            <t t-set="head">
                <div class="container-fluid" ng-app="app" ng-controller="ctrl" ng-cloak="">
                    <h2 class="my-4">OT Jobs</h2>
                    <h5>Name: [<span t-esc="employee.code"></span>]
                        <span t-esc="employee.name"></span>
                    </h5>
                    <hr/>
                    <div class="card border-0 shadow-sm mb-5">
                        <div class="card-body">
                            <div cg-busy="{promise:myPromise,message:'Loading'}"></div>
                            <div class="mb-4">
                                <a href="#" class="btn btn-success" ng-click="saveOTEmployee()">Save</a>
                                <a href="#" class="btn btn-danger" ng-click="init()">Cancel</a>
                            </div>
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link active" id="ot-open-tab" data-toggle="tab" href="#ot-open" role="tab" aria-controls="ot-open" aria-selected="true">Open</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a class="nav-link" id="ot-history-tab" data-toggle="tab" href="#ot-history" role="tab" aria-controls="ot-history" aria-selected="false">History</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active" id="ot-open" role="tabpanel" aria-labelledby="ot-open-tab">
                                    <table class="table table-bordered my-5">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Date</th>
                                                <th>OT</th>
                                                <th>Working Hours</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="p in ot_open_list">
                                                <td>@{$index + 1}</td>
                                                <td>@{p.ot_date}</td>
                                                <td>@{p.ot_rate}</td>
                                                <td>
                                                    <input type="text" class="form-control" ng-model="p.hours"/>
                                                </td>
                                                <td>@{p.amount|number:decimal_digits}</td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th colspan="2">Total</th>
                                                <th>@{ot_total_rate}</th>
                                                <th>@{ot_total_hours}</th>
                                                <th>@{ot_total_amount|number:decimal_digits}</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                                <div class="tab-pane fade" id="ot-history" role="tabpanel" aria-labelledby="ot-history-tab">
                                    <t t-if="approve_date_list_length">
                                        <div class="form-inline">
                                            <label for="">Approve Date :</label>
                                            <select class="form-control" ng-model="approve_date" ng-change="filterByApproveDate()">
                                                <option value="">- All -</option>
                                                <t t-foreach="approve_date_list" t-as="item">
                                                    <option t-att-value="item">
                                                        <t t-esc="item"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <table class="table table-bordered my-5">
                                            <thead>
                                                <tr>
                                                    <th>No</th>
                                                    <th>Date</th>
                                                    <th>Approve Date</th>
                                                    <th>OT</th>
                                                    <th>Working Hours</th>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="p in ot_history_list">
                                                    <td>@{$index + 1}</td>
                                                    <td>@{p.ot_date}</td>
                                                    <td>@{p.approve_date}</td>
                                                    <td>@{p.ot_rate}</td>
                                                    <td>@{p.hours}</td>
                                                    <td>@{p.amount|number:decimal_digits}</td>
                                                </tr>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th colspan="3">Total</th>
                                                    <th>@{ot_history_total_rate}</th>
                                                    <th>@{ot_history_total_hours}</th>
                                                    <th>@{ot_history_total_amount|number:decimal_digits}</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </t>
                                    <t t-if="approve_date_list_length == 0">
                                        <strong>No data found!</strong>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>

            <t t-set="script">
                <script src="/gmot_master/static/src/js/ot_jobs.js"></script>
            </t>
        </t>
    </template>
</odoo>
