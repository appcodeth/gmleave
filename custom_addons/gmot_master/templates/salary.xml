<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="salary_page" name="Salary Page">
        <t t-call="gmot_master.master_layouts">
            <t t-set="head">
                <div class="container-fluid" ng-app="app" ng-controller="ctrl" ng-cloak="">
                    <div class="modal fade" id="employeeHistoryModal" tabindex="-1" role="dialog" aria-labelledby="employeeHistoryModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="employeeHistoryModalLabel">History: [@{employee.code}] @{employee.name}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&amp;times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Date</th>
                                                <th>Salary</th>
                                                <th>Active</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="p in employee_history_list" ng-class="{'row-active': p.is_active}">
                                                <td>@{$index + 1}</td>
                                                <td>@{p.date}</td>
                                                <td>@{p.salary}</td>
                                                <td>
                                                    <span ng-if="p.is_active">
                                                        <i class="fa fa-check-circle"></i>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="#" class="text-danger" ng-if="p.is_delete" ng-click="deleteEmployeeHistory(p.id)">Delete</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ./modals -->
                    <h2 class="my-4">Salary</h2>
                    <div class="card border-0 shadow-sm mb-5">
                        <div class="card-header bg-transparent">
                            <div cg-busy="{promise:myPromise,message:'Loading'}"></div>
                            <a href="#" class="btn btn-success" ng-click="saveEmployee()">Save</a>
                            <a href="#" class="btn btn-danger" ng-click="init()">Cancel</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Department</th>
                                        <th>Effective Date</th>
                                        <th>Salary</th>
                                        <th>History</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="p in employee_list">
                                        <td>@{p.code}</td>
                                        <td>@{p.name}</td>
                                        <td>@{p.position}</td>
                                        <td>@{p.department}</td>
                                        <td>
                                            <div class="input-group">
                                                <input type="text" class="form-control" datepicker="" ng-model="p.effective_date" dp-format="dd/mm/yyyy"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="fa fa-clock"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <input type="text" class="form-control" ng-model="p.salary"/>
                                        </td>
                                        <td>
                                            <a href="#" class="btn btn-info" ng-click="openHistoryModal(p)">
                                                <i class="fa fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>

            <t t-set="script">
                <script src="/gmot_master/static/src/js/salary.js"></script>
            </t>
        </t>
    </template>
</odoo>
